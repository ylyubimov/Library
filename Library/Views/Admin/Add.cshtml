@model Library.Models.Record
@{
    ViewBag.Title = "Добавить материал";
}

<h2>Создать новую книгу</h2>
@{Html.BeginForm();}
<fieldset>
    @Html.ValidationSummary(true)
    <div class="editor-field">
        <label>Название</label>
        @Html.TextBoxFor(record => record.RecordName)
        @Html.ValidationMessageFor(record => record.RecordName)  
    </div>
    <div class="editor-field">
        <label>Описание</label>
        @Html.TextBoxFor(record => record.RecordDescription)
        @Html.ValidationMessageFor(record => record.RecordDescription)
    </div>
    <div class="editor-field">
        <label>Название издательства</label>
        @Html.TextBoxFor(record => record.Author.PublisherName)
        @Html.ValidationMessageFor(record => record.Author.PublisherName)
    </div>
    <div class="editor-field">
        <label>Адрес издательства</label>
        @Html.TextBoxFor(record => record.Author.Address)
        @Html.ValidationMessageFor(record => record.Author.Address)
    </div>
    <div class="editor-field">
        <label>Контактный телефон издательства</label>
        @Html.TextBoxFor(record => record.Author.Number)
        @Html.ValidationMessageFor(record => record.Author.Number)
    </div>
    <div class="editor-field">
        <label>Email издательства</label>
        @Html.TextBoxFor(record => record.Author.Email)
        @Html.ValidationMessageFor(record => record.Author.Email)
    </div>
    <input type="submit" value="Добавить" />
</fieldset>
@{Html.EndForm();}