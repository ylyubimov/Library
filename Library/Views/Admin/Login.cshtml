@model Library.Models.AdminLoginModel
@{
    ViewBag.Title = "ВОЙДИТЕ";
}

<h2>Логинимся, ребята</h2>
@{Html.BeginForm();}
<fieldset>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="editor-field">
        <label>Логин</label>
        @Html.TextBoxFor(admin => admin.Login)
        @Html.ValidationMessageFor(admin => admin.Login)
    </div>
    <div class="editor-field">
        <label>Пароль</label>
        @Html.TextBoxFor(admin => admin.Password)
        @Html.ValidationMessageFor(admin => admin.Password)
    </div>   
    <div class="editor-field">
        <label>Запомнить</label>
        @Html.CheckBoxFor(admin => admin.RememberMe)
        @Html.ValidationMessageFor(admin => admin.RememberMe)
    </div>   
    <input type="submit" value="GO ON" />
</fieldset>
@{Html.EndForm();}