<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Физтех-библиотека</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <nav>
        <div class="row">
            <div class="col-lg-3 col-sm-3 col-md-3">
                <a href="~/Records/Index" class="logo">
                    <div class="icon">
                    </div>
                </a>
            </div>
            <div class="col-lg-3 col-sm-3 col-md-3">
                <div class="input-group">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Переход <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="/Records/Index">Книги</a></li>
                            <li><a href="/Publishers/Index">Издатели</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-3 col-md-3">
                @{Html.BeginForm("Index", "Records", FormMethod.Get, new { @class = "search" });}
                @Html.DropDownList("search-button", new SelectList( new @List<Object> { "По книгам", "По авторам", "По издателям" }))
                @Html.TextBox("find", null, new { @class = "searchBox", placeholder = "Поиск" })
                <input type="submit" />
                @{Html.EndForm();}
            </div>

            <div class="col-lg-3 col-sm-3 col-md-3">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.AntiForgeryToken();
                    @Html.ActionLink("Выйти", "LogOff", "Admin", null, new { @class = "btn btn-success logging" });
                    @Html.ActionLink("Админка", "Index", "Admin", null, new { @class = "btn btn-success" });
                }
                else
                {
                    @Html.ActionLink("Войти", "Login", "Admin", null, new { @class = "btn btn-success logging" });
                }
            </div>
        </div>
    </nav>

    @RenderBody()
        <hr>
        <footer>
            <p>&copy; МФТИ 2015</p>
        </footer>
    <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/application.js"></script>
</body>
</html>
