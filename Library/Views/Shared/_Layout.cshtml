<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>Физтех-библиотека</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <nav>
        <a href="~/Records/Index" class="logo">
            <div class="icon">
            </div>
        </a>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.AntiForgeryToken();
                @Html.ActionLink("Выйти", "LogOff", "Admin", null, new { @class = "btn btn-success logging" });
                @Html.ActionLink("Админка", "Index", "Admin", null, new { @class = "btn btn-success" });
                //@Html.Action("LogOff");
            }
            else
            {
                @Html.ActionLink("Войти", "Login", "Admin", null, new { @class = "btn btn-success logging" });
            }
            @{Html.BeginForm("Index", "Records", FormMethod.Get, new { @class = "search" });}
                <div class="input-group">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Выберите страницу<span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            <li><a href="~/Records/">Книги</a></li>
                            <li><a href="~/Publishers/">Издатели</a></li>
                        </ul>
                        <input type="text" class="form-control" name="find" aria-label="search">
                    </div><!-- /btn-group -->
                </div> <!--/input-group -->
            @{Html.EndForm();}
</nav>
@RenderBody()
        <hr>
        <footer>
            <p>&copy; МФТИ 2015</p>
        </footer>
    <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/application.js"></script>
</body>
</html>
