@model Library.Models.AdminDeletionModel

@{
    ViewBag.Title = "Удаление книги";
}

<h2>Вы хотите удалить книгу?</h2>
<div class="container view">
    <form method="post">
        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Название:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.RecordName)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Описание:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.RecordDescription)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Автор:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.AuthorName)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>ISBN:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.ISBN)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Дата создания:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.CreationDate)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Количество страниц:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.NumberOfPages)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Аннотация:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.Annotation)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <h3>Издатель:</h3>
            </div>
            <div class="col-md-9 col-sm-9 record-field">
                @Html.DisplayFor(model => model.record.RecordPublisher.PublisherName)
            </div>
        </div>

        <input type="submit" value="Удалить" class="btn btn-success" />
    </form>
</div>