@{
    ViewBag.Title = "Список издательств";
}

@model IEnumerable<Library.Models.Publisher>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <h2>
                    @Html.ActionLink(item.PublisherName, "Publisher/" + item.PublisherId)
                </h2>             
                <p><h5>@Html.DisplayFor(modelItem => item.PublisherName)</h5></p>
                <p><h5>@Html.DisplayFor(modelItem => item.Address)</h5></p>
            </div>
        }
    </div>

</div>

